<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="8dp"
    tools:context=".views.HeaderFragment">

    <TableRow>

        <EditText
            android:id="@+id/value_from"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"

            android:maxLength="25"
            android:scrollHorizontally="true">

            <requestFocus />

        </EditText>

        <!-- Use EditText instead of TextView to allow horizontal scrolling if answer is too long -->
        <EditText
            android:id="@+id/value_to"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:scrollHorizontally="true" />

    </TableRow>


    <TableRow>

        <TextView
            android:id="@+id/header_text_from"

            android:layout_marginLeft="8dp"

            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="@string/from_unit" />

        <TextView
            android:id="@+id/header_text_to"

            android:layout_marginLeft="8dp"

            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="@string/to_unit" />

    </TableRow>


</TableLayout>